# Build stage
FROM golang:1.23-alpine AS builder
WORKDIR /app
# Copy go mod files
COPY go.mod ./
# Download dependencies
RUN go mod download
# Copy source code
COPY hello.go ./
# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -o hello .

# Runtime stage
FROM alpine:latest
WORKDIR /app
# Copy the binary from builder
COPY --from=builder /app/hello .
# Expose port 5000
EXPOSE 5000
# Run the application
CMD ["./hello"]
